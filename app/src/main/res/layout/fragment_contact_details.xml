<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.thesisproject.fikri.messengers.contacts.ContactDetails">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_initial_acc"
        android:layout_marginTop="49dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/ivContactDet"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@+id/ivContactDet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:id="@+id/editTextNameCont"
        android:hint="Contact Name"
        android:singleLine="true"
        android:capitalize="words"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@+id/editTextNameCont"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:id="@+id/editTextPhoneCont"
        android:hint="Phone Number"
        android:singleLine="true"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/ivAppAcc"
        android:layout_below="@+id/editTextPhoneCont"
        android:layout_alignLeft="@+id/editTextPhoneCont"
        android:layout_alignStart="@+id/editTextPhoneCont"
        android:layout_marginTop="39dp"
        android:src="@drawable/ic_approve_cont"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/ivDiscAcc"
        android:src="@drawable/ic_discard_cont"
        android:layout_alignTop="@+id/ivAppAcc"
        android:layout_alignRight="@+id/editTextPhoneCont"
        android:layout_alignEnd="@+id/editTextPhoneCont"/>

</RelativeLayout>
